<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Daftar | DevegaRoom</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Bangers&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary: #4361ee;
      --primary-dark: #3a0ca3;
      --primary-light: #4895ef;
      --secondary: #f72585;
      --dark: #2F3640;
      --light: #F5F6FA;
      --success: #4cc9f0;
      --warning: #f8961e;
      --danger: #ef233c;
      --transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
      --shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
      --shadow-hover: 0 15px 30px rgba(0, 0, 0, 0.2);
      --gradient: linear-gradient(135deg, var(--primary), var(--primary-light));
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Poppins', sans-serif;
      background-color: var(--light);
      color: var(--dark);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 1rem;
      background-image: 
        radial-gradient(circle at 25% 25%, rgba(0, 229, 255, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 75% 75%, rgba(0, 229, 255, 0.1) 0%, transparent 50%);
    }

    .container {
      display: flex;
      max-width: 1200px;
      width: 100%;
      background-color: white;
      border-radius: 20px;
      box-shadow: var(--shadow);
      overflow: hidden;
      min-height: 600px;
    }

    .form-container {
      flex: 1;
      padding: 3rem;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .form-container h2 {
      font-size: 2.5rem;
      margin-bottom: 1.5rem;
      color: var(--primary);
      text-align: center;
      font-weight: 700;
    }

    .form-container form {
      width: 100%;
      max-width: 400px;
      margin: 0 auto;
    }

    .input-group {
      margin-bottom: 1.5rem;
      position: relative;
    }

    .input-group label {
      display: block;
      margin-bottom: 0.5rem;
      font-weight: 500;
      color: var(--dark);
    }

    .input-group input {
      width: 100%;
      padding: 1rem 1rem 1rem 3rem;
      border: 2px solid #e9ecef;
      border-radius: 10px;
      background-color: white;
      color: var(--dark);
      font-size: 1rem;
      transition: var(--transition);
    }

    .input-group input:focus {
      outline: none;
      border-color: var(--primary);
      box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.2);
    }

    .input-group i {
      position: absolute;
      left: 1rem;
      top: 3.1rem;
      color: #adb5bd;
      transition: var(--transition);
    }

    .input-group input:focus + i {
      color: var(--primary);
    }

    button[type="submit"] {
      width: 100%;
      padding: 1rem;
      background: var(--gradient);
      color: white;
      border: none;
      border-radius: 10px;
      font-size: 1.1rem;
      font-weight: 600;
      cursor: pointer;
      transition: var(--transition);
      margin-top: 1rem;
      box-shadow: 0 4px 15px rgba(67, 97, 238, 0.3);
    }

    button[type="submit"]:hover {
      transform: translateY(-3px);
      box-shadow: 0 10px 25px rgba(67, 97, 238, 0.4);
    }

    .form-container p {
      text-align: center;
      margin-top: 1.5rem;
      color: #6c757d;
    }

    .form-container a {
      color: var(--primary);
      text-decoration: none;
      font-weight: 600;
      transition: var(--transition);
    }

    .form-container a:hover {
      text-decoration: underline;
    }

    .alert {
      padding: 1rem;
      border-radius: 10px;
      margin-bottom: 1.5rem;
      font-weight: 500;
      text-align: center;
    }

    .alert-success {
      background-color: rgba(76, 201, 240, 0.2);
      color: var(--success);
      border-left: 4px solid var(--success);
    }

    .alert-danger {
      background-color: rgba(239, 35, 60, 0.2);
      color: var(--danger);
      border-left: 4px solid var(--danger);
    }

    .toggle-container {
      flex: 1;
      background: linear-gradient(135deg, rgba(67,97,238,0.9), rgba(72,149,239,0.9));
      color: white;
      padding: 3rem;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      position: relative;
      overflow: hidden;
    }

    .glow-box {
      position: relative;
      z-index: 2;
      max-width: 500px;
    }

    .glow-box h1 {
      font-size: 2.5rem;
      margin-bottom: 1rem;
      font-weight: 700;
      line-height: 1.2;
    }

    .glow-box p {
      font-size: 1.2rem;
      margin-bottom: 2rem;
      opacity: 0.9;
    }

    .animated-border {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      overflow: hidden;
    }

    .animated-border::before {
      content: '';
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: linear-gradient(
        to bottom right,
        transparent,
        transparent,
        transparent,
        rgba(255, 255, 255, 0.1),
        transparent,
        transparent,
        transparent
      );
      animation: rotate 8s linear infinite;
      z-index: 1;
    }

    @keyframes rotate {
      0% {
        transform: rotate(0deg);
      }
      100% {
        transform: rotate(360deg);
      }
    }

    .typing {
      border-right: 2px solid white;
      animation: blink 0.75s step-end infinite;
    }

    @keyframes blink {
      from, to { border-color: transparent }
      50% { border-color: white }
    }

    /* Responsive */
    @media screen and (max-width: 992px) {
      .container {
        flex-direction: column;
        max-width: 600px;
      }
      
      .toggle-container {
        padding: 2rem;
        order: -1;
      }
      
      .form-container {
        padding: 2rem;
      }
    }

    @media screen and (max-width: 576px) {
      .glow-box h1 {
        font-size: 2rem;
      }
      
      .form-container h2 {
        font-size: 2rem;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="form-container animate-in">
      <h2>Daftar Akun Baru</h2>

      <% if (success) { %>
        <div class="alert alert-success">
          <i class="fas fa-check-circle"></i> <%= success %>
        </div>
      <% } %>

      <% if (error) { %>
        <div class="alert alert-danger">
          <i class="fas fa-exclamation-circle"></i> <%= error %>
        </div>
      <% } %>

      <form action="/register" method="POST" novalidate>
        <div class="input-group">
          <label for="email">Email</label>
          <i class="fas fa-envelope"></i>
          <input
            id="email"
            type="email"
            name="email"
            placeholder="Masukkan email kamu"
            required
            oninvalid="this.setCustomValidity('Emailnya belum kamu isi loh!!')"
            oninput="this.setCustomValidity('')"
          />
        </div>

        <div class="input-group">
          <label for="username">Username</label>
          <i class="fas fa-user"></i>
          <input
            id="username"
            type="text"
            name="username"
            placeholder="Buat username unik"
            required
            oninvalid="this.setCustomValidity('Usernamenya belum kamu isi loh!!')"
            oninput="this.setCustomValidity('')"
          />
        </div>

        <div class="input-group">
          <label for="password">Password</label>
          <i class="fas fa-lock"></i>
          <input
            id="password"
            type="password"
            name="password"
            placeholder="Buat password kuat"
            required
            oninvalid="this.setCustomValidity('Passwordnya belum kamu isi loh!!')"
            oninput="this.setCustomValidity('')"
          />
        </div>

        <button type="submit">
          <i class="fas fa-user-plus"></i> Daftar Sekarang
        </button>
      </form>

      <p>Sudah punya akun? <a href="/login">Login disini</a></p>
    </div>

    <div class="toggle-container">
      <div class="animated-border"></div>
      <div class="glow-box">
        <h1 id="typing-text" class="typing"></h1>
        <p id="fade-text">Silakan daftar untuk mengetahui dan menjelajahi hal baru! ðŸ˜Š</p>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Typing animation
      const text = "Bergabunglah Dengan DevegaRoom!";
      const typingText = document.getElementById('typing-text');
      let i = 0;
      
      typingText.textContent = '';
      typingText.classList.add('typing');
      
      function typeWriter() {
        if (i < text.length) {
          typingText.textContent += text.charAt(i);
          i++;
          setTimeout(typeWriter, 100);
        } else {
          typingText.classList.remove('typing');
        }
      }
      
      // Start typing animation after a short delay
      setTimeout(typeWriter, 500);
      
      // Fade in secondary text
      const fadeText = document.getElementById('fade-text');
      setTimeout(() => {
        fadeText.style.transition = 'opacity 1s ease';
        fadeText.style.opacity = '1';
      }, 1500);
    });
  </script>
</body>
</html>