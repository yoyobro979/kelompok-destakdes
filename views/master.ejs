<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Dashboard Admin</title>
  <link rel="stylesheet" href="/stylesheets/master.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
<div class="container-fluid">
  <div class="row">
    <!-- Sidebar -->
    <div class="col-md-3 col-lg-2 sidebar">
      <h4 class="text-white px-3 mb-4"><i class="bi bi-speedometer2"></i> Admin Panel</h4>
      <a href="/"><i class="bi bi-house"></i> Dashboard</a>
      <a href="/users"><i class="bi bi-people"></i>Manajemen Pengguna</a>
      <a href="/hewan"><i class="bi bi-robot"></i>hewan</a>
      <a href="/imunisasi"><i class="bi bi-apple"></i>Imunisasi</a>
      <a href="/pertumbuhan_gizi"><i class="bi bi-basket3"></i>Gizi</a>
      <a href="/"><i class="bi bi-box-arrow-right"></i> Kembali Ke Halaman</a>
    </div>

    <!-- Konten Utama -->
    <div class="col-md-9 col-lg-10 py-4">
      <div class="container">
        <h2 class="mb-4">Selamat Datang, Admin</h2>

        <% if (success) { %>
          <div class="alert alert-success"><%= success %></div>
        <% } %>
        <% if (error) { %>
          <div class="alert alert-danger"><%= error %></div>
        <% } %>

        <div class="row g-4">
          <div class="col-md-6 col-lg-4">
            <div class="card card-hover shadow-sm">
              <div class="card-body">
                <h5 class="card-title"><i class="bi bi-people-fill"></i> Pengguna</h5>
                <p class="card-text">Kelola data pengguna sistem.</p>
                <a href="/users" class="btn btn-outline-primary btn-sm">Kelola</a>
                <a href="/users/create" class="btn btn-outline-success btn-sm">Tambah User</a>
              </div>
            </div>
          </div>

          <div class="col-md-6 col-lg-4">
            <div class="card card-hover shadow-sm">
              <div class="card-body">
                <h5 class="card-title"><i class="bi bi-robot"></i>hewan</h5>
                <p class="card-text">Daftar hewan</p>
                <a href="/hewan" class="btn btn-outline-primary btn-sm">Kelola</a>
              </div>
            </div>
          </div>

          <div class="col-md-6 col-lg-4">
            <div class="card card-hover shadow-sm">
              <div class="card-body">
                <h5 class="card-title"><i class="bi bi-apple"></i>imunisasi</h5>
                <p class="card-text">Daftar imunisasi</p>
                <a href="/imunisasi" class="btn btn-outline-primary btn-sm">Kelola</a>
              </div>
            </div>
          </div>
           <div class="col-md-6 col-lg-4">
            <div class="card card-hover shadow-sm">
              <div class="card-body">
                <h5 class="card-title"><i class="bi bi-apple"></i>Gizi</h5>
                <p class="card-text">catatan Pertumbuhan Gizi</p>
                <a href="/pertumbuhan_gizi" class="btn btn-outline-primary btn-sm">Kelola</a>
              </div>
            </div>
          </div>
  <div class="col-md-6 col-lg-4">
            <div class="card card-hover shadow-sm">
              <div class="card-body">
                <h5 class="card-title"><i class="bi bi-apple"></i>nakes</h5>
                <p class="card-text">Daftar Nakes</p>
                <a href="/objek" class="btn btn-outline-primary btn-sm">Kelola</a>
              </div>
            </div>
          </div>
        <div class="col-md-6 col-lg-4">
            <div class="card card-hover shadow-sm">
              <div class="card-body">
                <h5 class="card-title"><i class="bi bi-tools"></i> tambahan</h5>
                <p class="card-text">tambahan</p>
                <a href="/alat" class="btn btn-outline-primary btn-sm">Kelola</a>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>

  </div>
</div>
</body>
</html>
