<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
  <title><%= title %> | devega</title>
  <style>
    .vehicle-card {
      border-radius: 12px;
      overflow: hidden;
      transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }
    .vehicle-card:hover {
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }
    .vehicle-img {
      height: 180px;
      object-fit: cover;
    }
    .specs-icon {
      width: 30px;
      text-align: center;
      color: #00e5ff;
    }
  </style>
</head>
<body>
  <%- include('partials/navbar') %>

  <main class="container my-5">
    <div class="text-center mb-5">
      <h1 class="display-4 fw-bold"><%= title %></h1>
      <p class="lead text-muted">Pilih kendaraan sesuai kebutuhan transportasi Anda</p>
    </div>

    <div class="row g-4">
      <% vehicles.forEach(vehicle => { %>
        <div class="col-xl-6">
          <div class="vehicle-card card shadow-sm h-100">
            <div class="row g-0 h-100">
              <div class="col-md-5">
                <img src="<%= vehicle.image %>" 
                     class="vehicle-img w-100 h-100" 
                     alt="<%= vehicle.name %>">
              </div>
              <div class="col-md-7">
                <div class="card-body d-flex flex-column h-100">
                  <h2 class="h4 card-title"><%= vehicle.name %></h2>
                  <div class="mb-3">
                    <span class="badge bg-primary"><%= vehicle.type %></span>
                  </div>
                  
                  <ul class="list-unstyled flex-grow-1">
                    <li class="d-flex mb-2">
                      <span class="specs-icon"><i class="fas fa-weight-hanging"></i></span>
                      <span>Kapasitas: <strong><%= vehicle.capacity %></strong></span>
                    </li>
                    <% vehicle.features.forEach(feature => { %>
                      <li class="d-flex mb-2">
                        <span class="specs-icon"><i class="fas fa-check-circle"></i></span>
                        <span><%= feature %></span>
                      </li>
                    <% }) %>
                  </ul>

                  <div class="d-flex justify-content-between align-items-center mt-auto pt-3">
                    <span class="h4 text-success">Rp <%= vehicle.price.toLocaleString('id-ID') %></span>
                    <button class="btn btn-outline-primary">
                      <i class="fas fa-info-circle me-1"></i> Detail
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </main>

  <%- include('partials/footer') %>
</body>
</html>